import 'base'

model User extends Base {
    firstName    String
    lastName     String?
    email        String  @unique
    phoneNumber  String?
    country      String
    city         String
    referralCode String  @unique

    referredById String?
    referredBy   User?   @relation("Referral", fields: [referredById], references: [id]) // Relasi ke user lain

    referrals    User[]  @relation("Referral")
}
